@model List<Pracownice.Models.Usluga>

@{
    ViewBag.Title = "_TwojeUslugi_Edit";
}

<form action="" method="get" enctype="application/x-www-form-urlencoded">
    <table id="results">
        @foreach (var item in Model)
        {
        <tr> 
            <td>
                @using (Html.BeginForm("xxx", "xxxx"))
                {
                <fieldset style="border: 1px groove #6f6f6f">
                        <legend>@item.Name</legend>

                        <div style="margin-left:4px">
                            <span id="SpecialSpan"
                                onmouseover="this.style.cursor='pointer'"
                                onmouseout="this.style.cursor='default'"
                                onclick="HideOrShowProfilePhoto('uslugaDescription + @item.UslugaID', 'pokazGaleria')";>
                                <div class="PracownicaUniwersalnaCzcionkaCiemna" id="pokazGaleria" style="margin-left:-1px; margin-top:-15px">
                                Edytuj Opis Uslugi
                                </div>
                            </span>
                            <div class="editor-field-accountMenager" id="uslugaDescription + @item.UslugaID" style="visibility:hidden; height:0px">
                                @Html.TextAreaFor(model => item.Description, new { @class = "TextAreaPracownica" })   
                                @Html.ValidationMessageFor(model => item.Description)
                            </div>

                            <div class="editor-field-accountMenager" id="uslugaDescription + @item.UslugaID" style="position:relative; margin-left:-150px; margin-top:35px" >
                            <div style="margin-left:350px; margin-top:-5"> Cena usługi(Pln)</div>
                                @Html.EditorFor(model => item.Prize)
                                @Html.ValidationMessageFor(model => item.Prize)
                            </div>

                            <div class="editor-field-accountMenager" id="uslugaDescription + @item.UslugaID" style="position:relative; margin-left:-150px; margin-top:0px" >
                            <div style="margin-left:350px; margin-top:-10"> Czas usługi(h)</div>
                                @Html.EditorFor(model => item.Time)
                                @Html.ValidationMessageFor(model => item.Time)
                            </div>
                        </div>

                        <p>
                            <input type="submit" style="margin-top:-20px;"  value="Zapisz" class="Button_SaveTwojeDane" />
                        </p>
                </fieldset>
                }
            </td>
        </tr>
        }
    </table>
    <div id="pageNavPosition"></div>
</form>

<script type="text/javascript" src="../../Content/Paginator/paging.js"></script>
 <script type="text/javascript">
     var pager = new Pager('results', 4);
     pager.init();
     pager.showPageNav('pager', 'pageNavPosition');
     pager.showPage(1);
</script>