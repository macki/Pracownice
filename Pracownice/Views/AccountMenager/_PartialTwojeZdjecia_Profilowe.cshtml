@model Pracownice.Models.Pracownica
           
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="../../../Scripts/si.files.js"></script> 
<script type="text/javascript" src="../../../Scripts/PracownicaTwojeZdjecia.js"></script>   
<script type="text/javascript">
{
    SI.Files.stylizeAll();
}

</script>

      <fieldset>
             <legend>Zdjęcie Profilowe
                <legend>
                       <span id="SpecialSpan"
                              onmouseover="this.style.cursor='pointer'"
                              onmouseout="this.style.cursor='default'"
                              onclick="HideOrShowProfilePhoto('photo','pokazProfil')";>
                              <div class="PracownicaUniwersalnaCzcionkaCiemna" id="pokazProfil" style="margin-left:-1px">
                                Pokaż
                              </div>
                        </span>
                </legend>
             </legend>

            <div id="photo" style="margin-top:-5px; visibility:hidden; height:0px">
                <div style="max-width:600px; height:auto; text-align:center"> 
                     <img src="@Model.MainPhotoUrl?width=600&borderWidth=10&borderColor=black"/>
                </div>
            </div>
 
         
            @using (Html.BeginForm("SaveProfileImage", "Pracownica", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label class="cabinet" id="cabinatButton"> 
                     <input type="file" name="file" onchange="showPhoto(this.value,
                                                                        'photo',
                                                                        'buttonOk',
                                                                        'buttonBack',
                                                                        'buttonChooseFile',
                                                                        'cabinatButton',
                                                                        'buttonsPositionSetter')"
                                                                        id="buttonChooseFile" value="Wybierz nowe zdjęcie" class="file" />
                </label>
    
                <div id="buttonsPositionSetter" style="display:inline; position:relative; margin-top:10px; margin-bottom:10px">
                    <input type="submit" value="Zatwierdź" id="buttonOk" style="visibility:hidden" class="Button_pracownice" />



                    <input type="button" onclick="HideNewFile('@Model.MainPhotoUrl',
                                                                'photo',
                                                                'buttonOk',
                                                                'buttonBack',
                                                                'buttonChooseFile',
                                                                'cabinatButton',
                                                                'buttonsPositionSetter')"
                                                                id="buttonBack" value="Rezygnuję" style="visibility:hidden" class="Button_pracownice" />
                </div>
            }

 </fieldset>