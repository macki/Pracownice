            @foreach(var item in ViewBag.items)
            {
                SelectListItem itemT =  (SelectListItem)item;

                @itemT.Text;
            }

            

            @Html.ListBox("asd", (IEnumerable<SelectListItem>)ViewBag.items, new  {  @size = 5, @multiple = false });


            @Html.Partial("slider");
         


        <section id="main">
